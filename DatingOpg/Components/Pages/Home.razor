@page "/"
@rendermode InteractiveServer


<div class="row">
    <div class="col-12">
        <h2 class="fw-bolder">Welcome to <span class="text-danger">Dating App</span></h2>
    </div>
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <AuthorizeView>
                    <NotAuthorized>
                        <div>
                            <span>You are not logged in. Please <a class="fw-bolder" href="/Accounts/Login">click here</a> to log in.</span>
                        </div>
                        <div class="mt-2">
                            <span>You don't have an login? <a href="/accounts/create" class="fw-bolder">Click here</a> to create one.</span>
                        </div>
                    </NotAuthorized>
                    <Authorized>
                        <span>Logged in as <b>@context.User.Identity.Name</b>. <a class="fw-bolder" href="/Accounts/Logout">Click here</a> to logout.</span>
                    </Authorized>
                </AuthorizeView>
            </div>
        </div>
    </div>
</div>